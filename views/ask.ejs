<%- include ('partials/header.ejs')  %> 
<body>
  <%- include ('partials/navbar.ejs') %> 
  <div class="container">
    <div class="card" id="question-form">
      <div class="card-header">
        <h3>What is your doubt?</h3>
      </div>
      <div class="card-body">
        <!-- GET: os dados do formulários são passados pela url pro backend pelos query params. dados expostos-->
        <!--POST: os dados são passados dentro da requisição e não na url -->
        <form method="POST" action="/save">
          <label>Title</label>
          <input type="text" placeholder="Title" class="form-control" name="title">
          <br>
          <label>Description</label>
          <textarea placeholder="Describe your question here" class="form-control" name="description"></textarea>
          <br>
          <button type="submit" class="btn btn-primary" >Send</button>
        </form>
      </div>
    </div>
  </div>
</body>
